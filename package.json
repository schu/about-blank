{
  "license": "Apache-2.0",
  "dependencies": {
    "bootstrap": "4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4",
    "sass": "^1.14.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3"
  },
  "scripts": {
    "build": "run-p compile-scss copy-bootstrap copy-jquery",
    "compile-scss": "./node_modules/sass/sass.js scss/about-blank.scss:static/css/about-blank.css",
    "copy-bootstrap": "cp node_modules/bootstrap/dist/js/bootstrap.min.js static/js",
    "copy-jquery": "cp node_modules/jquery/dist/jquery.min.js static/js",
    "watch": "./node_modules/sass/sass.js --watch scss/about-blank.scss:static/css/about-blank.css"
  }
}
